<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/noInternetContainer"
            style="@style/noInternet_container"
            tools:ignore="MissingConstraints">

        <ImageView
                android:layout_marginTop="20dp"
                style="@style/noInternet_image"
                android:id="@+id/nImageNoInternet"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
        />

        <TextView
                android:id="@+id/nText1"
                app:layout_constraintTop_toBottomOf="@id/nImageNoInternet"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/noInternet_text_big"
                android:text="@string/noInternetTitle" />

        <TextView
                android:id="@+id/nText2"
                app:layout_constraintTop_toBottomOf="@id/nText1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/noInternet_text_normal"
                android:text="@string/noIntenertMessage" />


        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/nText2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="20sp">


            <TextView
                    android:id="@+id/nRloadInternet"
                    style="@style/noInternet_btn_reload"
                    />




        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>